   ToggleUIKeybind = "K", -- The keybind to toggle the UI visibility (string like "K" or Enum.KeyCode)

   DisableRayfieldPrompts = false,
   DisableBuildWarnings = false, -- Prevents Rayfield from warning when the script has a version mismatch with the interface

   ConfigurationSaving = {
      Enabled = true,
      FolderName = nil, -- Create a custom folder for your hub/game
      FileName = "Skibidisaken"
   },

   Discord = {
      Enabled = false, -- Prompt the user to join your Discord server if their executor supports it
      Invite = "noinvitelink", -- The Discord invite code, do not include discord.gg/. E.g. discord.gg/ ABCD would be ABCD
      RememberJoins = true -- Set this to false to make them join the discord every time they load it up
   },

   KeySystem = true, -- Set this to true to use our key system
   KeySettings = {
      Title = "Get Keyüîë",
      Subtitle = "Key System",
      Note = "Key In DisCordüîë", -- Use this to tell the user how to get a key
      FileName = "Key", -- It is recommended to use something unique as other scripts using Rayfield may overwrite your key file
      SaveKey = true, -- The user's key will be saved, but if you change the key, they will be unable to use your script
      GrabKeyFromSite = false, -- If this is true, set Key below to the RAW site you would like Rayfield to get the key from
      Key = {"Chubby"} -- List of keys that will be accepted by the system, can be RAW file links (pastebin, github etc) or simple strings ("hello","key22")
   }
}) --Main Tab
local MainTab = MainWindow:CreateTab("üè°Home", nil) -- Title, Image
local MainSection = MainTab:CreateSection("Main")
local Running = false
local StaminaLoop

MainToggle = MainTab:CreateToggle({
   Name = "INF Stamina",
   CurrentValue = false,
   Flag = "Toggle1",
   Callback = function(Value)
      Running = Value
      local StaminaModule = require(game.ReplicatedStorage.Systems.Character.Game.Sprinting)
      StaminaModule.StaminaLossDisabled = Value

      if Value then
         StaminaLoop = task.spawn(function()
            while Running do
               task.wait(0.1)
               StaminaModule.Stamina = StaminaModule.MaxStamina
               StaminaModule.StaminaChanged:Fire()
            end
         end)
      end
   end,
}) --Misc Tab
local MiscTab = MainWindow:CreateTab("üåêMisc", nil) -- Title, Image
local MiscSection = MiscTab:CreateSection("Misc")
local MiscButton = MiscTab:CreateButton({
    Name = "NoFog And Fix Lag",
    Callback = function()
        -- ‚òÅÔ∏è X√≥a c√°c Sky ƒëang t·ªìn t·∫°i
        for _, v in pairs(game.Lighting:GetChildren()) do
            if v:IsA("Sky") then
                v:Destroy()
            end
        end

        -- üåÑ G·∫Øn l·∫°i Sky m·∫∑c ƒë·ªãnh Roblox
        local defaultSky = Instance.new("Sky")
        defaultSky.SkyboxBk = "rbxassetid://401664839"
        defaultSky.SkyboxDn = "rbxassetid://401664889"
        defaultSky.SkyboxFt = "rbxassetid://401664831"
        defaultSky.SkyboxLf = "rbxassetid://401664808"
        defaultSky.SkyboxRt = "rbxassetid://401664845"
        defaultSky.SkyboxUp = "rbxassetid://401664874"
        defaultSky.Parent = game.Lighting

        -- üîÅ T·ª± ƒë·ªông x√≥a b·∫•t k·ª≥ Sky m·ªõi n√†o
        game.Lighting.ChildAdded:Connect(function(child)
            if child:IsA("Sky") then
                task.wait(0.1)
                child:Destroy()
            end
        end)

        -- üå´ X√≥a s∆∞∆°ng m√π v√† ƒëi·ªÅu ch·ªânh √°nh s√°ng
        game.Lighting.FogEnd = 100000
        game.Lighting.FogStart = 0
        game.Lighting.ClockTime = 14
        game.Lighting.Brightness = 2
        game.Lighting.GlobalShadows = false

        -- üöÄ Gi·∫£m lag nh·∫π
        local function reduceLag()
            for _, v in pairs(workspace:GetDescendants()) do
                if v:IsA("ParticleEmitter") or v:IsA("Trail") or v:IsA("Explosion") or v:IsA("Fire") or v:IsA("Smoke") or v:IsA("Sparkles") then
                    v.Enabled = false
                elseif v:IsA("Decal") or v:IsA("Texture") then
                    v.Transparency = 0.5
                elseif v:IsA("MeshPart") then
                    v.Material = Enum.Material.Plastic
                    v.Reflectance = 0
                end
            end
        end
        reduceLag()
    end,
})
local MiscToggle = MiscTab:CreateToggle({
    Name = "Esp (Survivor Killer Generator)",
    CurrentValue = false,
    Flag = "Toggle2",
    Callback = function(Value)
        ESPEnabled = Value
        if Value then
            task.spawn(updateESP)
        else
            -- Xo√° highlight khi t·∫Øt ESP
            for _, obj in pairs(workspace.Players:GetChildren()) do
                if obj:IsA("Model") and obj:FindFirstChild("Humanoid") then
                    for _, child in pairs(obj:GetChildren()) do
                        if child:IsA("Highlight") then
                            child:Destroy()
                        end
                    end
                end
            end
        end
    end
})
