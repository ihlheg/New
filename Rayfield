local ESPEnabled = false

-- üéØ H√†m t·∫°o hi·ªáu ·ª©ng Highlight
local function createOutlineESP(model, outlineColor, fillColor)
    local highlight = Instance.new("Highlight")
    highlight.Adornee = model
    highlight.FillTransparency = 0.75
    highlight.FillColor = fillColor
    highlight.OutlineColor = outlineColor
    highlight.OutlineTransparency = 0 
    highlight.Parent = model
end

-- üí° ESP cho nh√≥m ng∆∞·ªùi
local function createOutlineESPForGroup(group, outlineColor, fillColor)
    for _, obj in pairs(group:GetChildren()) do
        local humanoid = obj:FindFirstChildOfClass("Humanoid")
        if humanoid and obj:FindFirstChild("HumanoidRootPart") then
            createOutlineESP(obj, outlineColor, fillColor)
        end
    end
end

-- ‚ö° ESP cho generator
local function highlightGenerators()
    local mapFolder = workspace:FindFirstChild("Map") and workspace.Map:FindFirstChild("Ingame") and workspace.Map.Ingame:FindFirstChild("Map")
    if mapFolder then
        for _, obj in pairs(mapFolder:GetChildren()) do
            if obj:IsA("Model") and obj.Name == "Generator" then
                createOutlineESP(obj, Color3.new(1, 1, 0), Color3.new(1, 1, 0.5))
            end
        end
    end
end

-- üîÑ V√≤ng l·∫∑p ESP
function updateESP()
    while ESPEnabled do
        -- 1. Xo√° highlight c≈©
        for _, obj in pairs(workspace.Players:GetChildren()) do
            if obj:IsA("Model") and obj:FindFirstChild("Humanoid") then
                for _, child in pairs(obj:GetChildren()) do
                    if child:IsA("Highlight") then
                        child:Destroy()
                    end
                end
            end
        end

        -- 2. ESP cho Killers
        local killersGroup = workspace.Players:FindFirstChild("Killers")
        if killersGroup then
            createOutlineESPForGroup(killersGroup, Color3.new(1, 0, 0), Color3.new(1, 0.5, 0.5))
        else
        end
        
        -- 3. ESP cho Survivors
        local survivorsGroup = workspace.Players:FindFirstChild("Survivors")
        if survivorsGroup then
            createOutlineESPForGroup(survivorsGroup, Color3.new(0, 1, 0), Color3.new(0.5, 1, 0.5))
        else
        end

        -- 4. ESP cho Generators
        highlightGenerators()

        -- 5. Ch·ªù 5 gi√¢y r·ªìi ch·∫°y l·∫°i
        task.wait(5)
    end
end

local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

